{
	"name": "serverless-completer",
	"displayName": "serverless-completer",
	"description": "serverless.yml file completer for VSCode",
	"version": "0.0.1",
	"author": {
		"name": "Hapsida @securisec"
	},
	"publisher": "securisec",
	"repository": {
		"url": "https://github.com/securisec/code-serverless-completer"
	},
	"keywords": [
		"serverless",
		"lint",
		"serverless framework",
		"aws"
	],
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:yaml"
	],
	"contributes": {
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/snippets.json"
			}
		],
		"languages": [
			{
				"id": "yaml",
				"filenamePatterns": [
					"serverless.yaml",
					"serverless.yml"
				]
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"devDependencies": {
		"@types/glob": "^7.1.2",
		"@types/mocha": "^7.0.1",
		"@types/node": "^14.0.14",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"glob": "^7.1.6",
		"typescript": "^3.9.5",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@apidevtools/json-schema-ref-parser": "^9.0.1"
	}
}
